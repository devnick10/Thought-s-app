<%- include('partials/header') %>
        <div class="flex gap-3 items-start  "> 
            <div class="overflow-hidden w-10 h-10">
                <img class=" rounded-md bg-red-500 object-cover" src="/images/uploads/<%=user.profilepic%>" alt="profile image">
            </div>
            <h1 class="text-xl mb-5"><span class="font-light">hello</span> <%=user.username%>ðŸ‘‹</h1>
            
        </div>

            <a href="/profile/upload">upload</a>
        
            
           <h5 class="mb-5">you can create a post.</h5>
           <form method="post" action="/post">
            <textarea name="content" placeholder="what's on your mind ?" class="p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"></textarea>
            <input class="block mt-3 py-2 rounded-md text-sm w-40 px-4 bg-yellow-600" type="submit" value="Create New Post  ">
           </form>

           <div class="posts mt-20">
              <h3 class="text-zinc-400">Your Posts.</h3>
              <div class="postcontainer mt-5 rounded-md">
                <% if(user.posts.length > 0){%> 

                    <% user.posts.forEach(post => {%>
                        
                        <div class="inline-block ml-1 mr-1 post w-1/3 border-zinc-700 bg-zinc-800 border-[1px] mb-2 p-4">
                            <div class="btns flex justify-between ">
                                <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
                                <a class="text-red-400" href="/delete/<%=post._id%>">Delete</a>
                            </div>
                            <p class="text-sm tracking-tight"><%= post.content %></p>
                            <small class="mt-3 inline-block"><%=post.likes.length
                                %></small>
                            <div class="btns flex justify-between mt-2"> 
                                <a class="text-blue-500" href="/like/<%=post._id%>">
                                    <%=post.likes.indexOf(user._id) === -1 ? "Like":"Unlike"%>
                                </a>
                                <a class="text-zinc-500" href="/edit/<%=post._id%>">Edite</a>
                            </div>
                        </div>
                   <% }); %>
               <% }else{%>
                    <p class="text-zinc-500 text-md p-4">no post yet.</p>
                  <%}%>
              </div>
           </div>


       </div>
     
    <script src="/javascripts/script.js"></script>
    
    <%- include('partials/footer') %>