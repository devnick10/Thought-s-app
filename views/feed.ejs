<%- include('partials/header') %>
        <a href="/profile" class=" inline-block  mb-3 text-small">ðŸ”™ home</a>
        <div class="flex gap-3 items-start  "> 
            <div class="overflow-hidden w-10 h-10">
                <img class=" rounded-md bg-red-500 object-cover" src="/images/uploads/<%=user.profilepic%>" alt="profile image">
            </div>
            <h1 class="text-xl mb-5"><span class="font-light"></span> <%=user.username%>ðŸ‘‹</h1>
            
        </div>

        
            
           <!-- <h5 class="mb-5">you can create a post.</h5> -->

           <div class="posts  mt-20">
              <!-- <h3 class="text-zinc-400">Your Posts.</h3> -->
              <div class="postcontainer  rounded-md">
                <% if(post.length > 0){%> 

                    <% post.forEach(post => {%>
                        
                        <div class=" inline-block post w-1/4 border-zinc-700 bg-zinc-800 border-[1px] mb-3  rounded-md ml-1 mr-1  p-4">
                            <h4 class="text-blue-500 mb-2">@<%= post.user.username %></h4>
                            <p class="text-sm tracking-tight"><%= post.content %></p>
                            <small class="mt-3 inline-block"><%=post.likes.length
                                %></small>
                            <div class="btns flex justify-between mt-2"> 
                                <a class="text-blue-500" href="/like/<%=post._id%>">
                                    <%=post.likes.indexOf(user._id) === -1 ? "Like":"Unlike"%>
                                </a>
                            </div>
                        </div>
                   <% }); %>
               <% }else{%>
                    <p class="text-zinc-500 text-md p-4">no post yet.</p>
                  <%}%>
              </div>
           </div>


       </div>
     
    <script src="/javascripts/script.js"></script>
    <%- include('partials/footer') %>